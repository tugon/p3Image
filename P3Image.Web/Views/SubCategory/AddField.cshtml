<div class="modal-content">
    <form>
        <div class="modal-header">
			<button type="button" class="close modal-close" ng-click="closeAddField()" aria-hidden="true"><i class="ti ti-close"></i></button>
            <h2>FIELD</h2>
        </div>
        <div class="modal-body">
            <div class="row">

                <input type="hidden" ng-model="field.Id"/>
                <input type="hidden" ng-model="field.SubCategoryId" />
                <div class="col-md-12">
                    <div class=" form-group col-md-12">
                        <label class="control-label">DESCRIPTION</label>
                        <input type="text" class="form-control" ng-model="field.Description" />
                    </div>
                    <div class=" form-group col-md-6">
                        <label class="control-label">ORDER</label>
                        <input type="number" class="form-control" ng-model="field.Order" />
                    </div>
                    
                    <div class=" form-group col-md-6">
                        <label class="control-label">FIELD TYPE</label>
                        <combo-field-type ng-model="field.FieldType" css-class="form-control" on-change="fieldTypeChanged" load-on-start="true" label="TYPES"></combo-field-type>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" ng-click="saveField(field)" class="btn btn-success">SAVE</button>
            <button type="button" ng-click="closeAddField()" class="btn btn-default">CANCEL</button>
        </div>
    </form>
</div>

