<div class="modal-content">
    <form>
        <div class="modal-header">
			<button type="button" class="close modal-close" ng-click="close()" aria-hidden="true"><i class="ti ti-close"></i></button>
            <h2>FIELD OPTION</h2>
        </div>
        <div class="modal-body">
            <div class="row">

                <input type="hidden" ng-model="fieldOption.Id" />
                <div class="col-md-12">
                    <div class=" form-group col-md-12">
                        <label class="control-label">FIELD ID</label>
                        <input type="text" class="form-control" ng-model="fieldOption.FieldId" />
                    </div>
                    <div class=" form-group col-md-12">
                        <label class="control-label">TEXT</label>
                        <input type="text" class="form-control" ng-model="fieldOption.Text" />
                    </div>
                    <div class=" form-group col-md-12">
                        <label class="control-label">VALUE</label>
                        <input type="text" class="form-control" ng-model="fieldOption.Value" />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" ng-click="save()" class="btn btn-success">SAVE</button>
            <button type="button" ng-click="close()" class="btn btn-default">CANCEL</button>
        </div>
    </form>
</div>

