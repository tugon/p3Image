<div class="row" ng-init="init()">
    <div class="col-md-12">
        <div class="panel panel-indigo">
            <div class=" panel-heading">
                <h2>SUB CATEGORY</h2>
                <div class="panel-ctrls">
                    <a href="#" class="button-icon" uib-tooltip="new Sub Category" tooltip-placement="left" ng-click="openEdit()"><i class="ti ti-file"></i></a>
                </div>
            </div>
		</div>
        <div class="panel panel-indigo">
            <div class=" panel-body">
                <table class="table">
                    <tr>
                        <th>
                            ID
                        </th>   
                        <th>
                            CATEGORY ID
                        </th>   
                        <th>
                            DESCRIPTION
                        </th>   
                        <th>
                            SLUG
                        </th>   
                      
                    </tr>
                    <tr ng-repeat="subCategory in subCategoryList">
                        <td>
                            {{subCategory.Id}}
                        </td>
                        <td>
                            {{subCategory.CategoryId}}
                        </td>
                        <td>
                            {{subCategory.Description}}
                        </td>
                        <td>
                            {{subCategory.Slug}}
                        </td>
                        <td>
                            <div class="panel-ctrls">
                                <a href="#" class="button-icon" uib-tooltip="edit" ng-click="openEdit(subCategory)">
                                    <i class="ti ti-pencil-alt"></i>
                                </a>
                                <a href="#" class="button-icon" uib-tooltip="remove" ng-click="remove(subCategory,$index)">
                                    <i class="ti ti-trash red"></i>
                                </a>
                            </div>
                        </td>
                    </tr>


                </table>
                <uib-pagination total-items="paging.count" max-size="10" ng-model="currentPage" class="pagination m-n pull-right" boundary-links="true" rotate="false" ng-change="pageChanged()" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></uib-pagination>
            </div>
        </div>
    </div>
</div>
